<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/unit"
        android:paddingBottom="@dimen/unit">

        <include layout="@layout/partial_item_header"/>

        <include layout="@layout/partial_item_video"/>

        <include layout="@layout/partial_item_image"/>

        <include layout="@layout/partial_item_images"/>
    </LinearLayout>
</android.support.v7.widget.CardView>